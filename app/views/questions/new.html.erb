<%= render "layouts/navbar" %>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            </br>
            <h2>Publicar Pregunta</h2>
            <%= form_for @question do |f| %>
                <% if @question.errors.any? %>
                    <div class="alert alert-danger alert-block alert-fized">
                        <ul>
                            <% @question.errors.full_messages.each do |msg|%>
                                <li> <%= msg %></li>
                            <% end %>
                        </ul>
                    </div>
                <% end %>
                <div class="form-group">
                    <%= f.text_field :title, class: "form-control", placeholder: "Título"  %>
                </div>
                <div class="form-group">
                    <%= f.text_area :description, class: "form-control", cols: "30", rows: "10", placeholder: "Descripción" %>
                </div>
                <div>
                    <%= f.button "¡Preguntar!", class: "btn btn-primary"%>
                </div>
            <% end %>
        </div>
    </div>
</div>